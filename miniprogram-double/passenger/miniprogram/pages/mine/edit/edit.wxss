.bg {
	height: 100px;
	background-color: #66DD00;
	display: flex;
}

.head {
	display: flex;
	flex-direction: column;
}

.headIcon {
	display: flex;
	justify-content: center;
}

.login {
	display: flex;
	color: #fff;
	font-size: 15px;
	margin-top: 15rpx;
	justify-content: center;
}

.button {
	margin: 10px;
	font-size: 14px;
}

.head image {
	border-radius: 50%;
}

.hr {
	width: 100%;
	height: 15px;
	background-color: #f4f5f6;
}

.item {
	display: flex;
	flex-direction: row;
}

.title {
	padding-top: 15px;
	padding-bottom: 15px;
	padding-left: 15px;
	font-size: 15px;
}

.detail2 {
	font-size: 15px;
	position: absolute;
	right: 10px;
	height: 50px;
	line-height: 50px;
	color: #888;
}

.line {
	border: 1px solid #ccc;
	opacity: 0.2;
}

.money {
	padding-top: 6%;
	padding-left: 11%;
	color: white;
}

.topimg-view {
	padding-left: 12%;
}

.topimg-view,
.topimg {
	width: 20vw;
	height: 20vw;
	border-radius: 50%;
}

.borrowbook {
	padding-top: 5.8%;
	padding-left: 10%;
	color: white;
}

.hover {
	color: rgb(153, 152, 152);
}